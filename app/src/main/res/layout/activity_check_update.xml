<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".function.CheckUpdate">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy nhập lại tài khoản và mật khảu"
        android:textSize="35dp"
        android:typeface="monospace"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_margin="16dp"
        android:background="@drawable/custom_edt2"
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textSize="25dp"
        android:padding="5dp"/>
    <EditText
        android:layout_margin="16dp"
        android:background="@drawable/custom_edt2"
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pasword"
        android:inputType="textPassword"
        android:textSize="25dp"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_margin="16dp"
            android:background="@drawable/custom_button_signup"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_gotoupdate"
            android:text="Xát nhận"/>
        <Button
            android:layout_margin="16dp"
            android:background="@drawable/custom_button_signup"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cane"
            android:text="Hủy"/>

    </LinearLayout>
</LinearLayout>